generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model users {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  user_streaks user_streaks?

  @@map("users")
}

model user_streaks {
  id            Int  @id @default(autoincrement())
  user_id       Int  @unique
  current_streak Int

  user users @relation(fields: [user_id], references: [id])
}